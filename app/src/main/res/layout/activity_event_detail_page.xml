<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.basri.sunapp.Activity7"
    android:background="@drawable/background"
    android:id="@+id/event_detail_layout">

    //

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="creator:"
        android:id="@+id/textView34"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/line"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="event name"
        android:id="@+id/event_name"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="event type"
        android:id="@+id/event_type"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/event_name"
        android:layout_alignStart="@+id/event_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/event_info"
        android:layout_below="@+id/event_name"
        android:layout_above="@+id/textView34"
        android:background="@drawable/textbox"
        android:layout_marginRight="15dp"
        android:gravity="top"
        android:text="event info"
        android:paddingLeft="16dp"
        android:paddingTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="date:"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="time:"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="place:"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="participiants:"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="username"
        android:id="@+id/event_creator_button"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignRight="@+id/event_info"
        android:layout_alignEnd="@+id/event_info"
        android:background="@drawable/button2a"
        android:layout_toEndOf="@id/textView34"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="mm:dd:yy"
        android:id="@+id/event_date"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView10"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="hh:mm"
        android:id="@+id/event_time"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/event_date"
        android:layout_alignStart="@+id/event_date"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="place_name"
        android:id="@+id/event_place"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/event_time"
        android:layout_alignStart="@+id/event_time"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="number"
        android:id="@+id/event_participants"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignRight="@+id/event_date"
        android:layout_alignEnd="@+id/event_date"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/event_place"
        android:layout_alignStart="@+id/event_place" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="event_status"
        android:id="@+id/event_status"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff007c12"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/event_join_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/event_creator_button"
        android:layout_alignEnd="@+id/event_creator_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toggleJoin" />

</RelativeLayout>
